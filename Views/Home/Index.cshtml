@{
    ViewData["Title"] = "Home Page";
}

<div class="container text-center">
    <img src="~/Images/Screenshot 2025-06-21 at 18-36-51 Projektuppgift.pdf.png"
         style="width: 500px; height: 500px;"
         class="img-fluid" />


@if (User.Identity.IsAuthenticated)
{
    <p>Hej @User.Identity.Name</p>

    @if (User.IsInRole("Admin"))
    {
        <div class="btn-group" role="group">
            <a asp-controller="Cars" asp-action="Index" class="btn btn-primary">Se bilar</a>
            <a asp-controller="AdminCustomerOrders" asp-action="Index" class="btn btn-primary">Se beställningar</a>
            <a asp-controller="ApplicationUser" asp-action="Index" class="btn btn-primary">Se användare</a>
        </div>

    }
    else if (User.IsInRole("Customer"))
    {
        <div class="btn-group">
            <a asp-controller="Cars" asp-action="Index" class="btn btn-primary">Se bilar</a>
            <a asp-controller="UserCustomerOrders" asp-action="Index" class="btn btn-primary">Se dina beställningar</a>
        </div>
    }
}

</div>
