@{
    ViewData["Title"] = "Home Page";
}

<div class="container" " >
    <div class="text-center">
        <img src="~/Images/Screenshot 2025-06-21 at 18-36-51 Projektuppgift.pdf.png"
             style="width: 500px; height: 500px;"
             class="img-fluid" />
    </div>

    <div class="d-flex flex-column align-items-center gap-2"
        <div class="text-center">
            @if (User.Identity.IsAuthenticated)
            {
                    <p>Hej @User.Identity.Name</p>

                    @if (User.IsInRole("Admin"))
                    {
                            <div class="gap-2  d-flex justify-content-center" style="width: 500px; margin: 0 auto;">
                                <a asp-controller="Cars" asp-action="Index" class="btn btn-primary flex-fill">Se bilar</a>
                                <a asp-controller="AdminCustomerOrders" asp-action="Index" class="btn btn-primary flex-fill">Se beställningar</a>
                                <a asp-controller="ApplicationUser" asp-action="Index" class="btn btn-primary flex-fill">Se användare</a>
                            </div>

                    }
                    else if (User.IsInRole("Customer"))
                    {
                            <div class="gap-2 d-flex justify-content-center" style="width: 500px; margin: 0 auto;">
                                <a asp-controller="Cars" asp-action="Index" class="btn btn-primary flex-fill" style="width: 500px; margin: 0 auto;">Se bilar</a>
                                <a asp-controller="UserCustomerOrders" asp-action="Index" class="btn btn-primary flex-fill" style="width: 500px; margin: 0 auto;">Se dina beställningar</a>
                            </div>
                    }

            }

            else if (!User.Identity.IsAuthenticated)
            {
                    <div class="gap-2 d-flex justify-content-center" style="width: 500px; margin: 0 auto;">
                        <a asp-controller="Cars" asp-action="Index" class="btn btn-primary flex-fill">Se bilar</a>
                        <a class="btn btn-primary flex-fill" asp-area="Identity" asp-page="/Account/Register">Registrera dig</a>
                    </div>
            }
        </div>
    </div>
</div>

