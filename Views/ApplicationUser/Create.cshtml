@using FriBergs_CarRental.Models.ViewModels
@model ApplicationUserCreateViewModel
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1>Skapa</h1>

            <h4>Användare</h4>
            <hr />

            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="RoleName" class="control-label"></label>
                            <select asp-for="RoleName" class="form-control">
                                <option value="">-- Vänligen välj roll --</option>
                                <option value="Admin">Admin</option>
                                <option value="Customer">Customer</option>
                            </select>
                            <span asp-validation-for="RoleName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Skapa" class="btn btn-primary mt-2" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-action="Index">Tillbaka till listan</a>

            </div>
        </div>
    </div>
</div>