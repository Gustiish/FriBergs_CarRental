@using FriBergs_CarRental.Models.ViewModels
@model IEnumerable<ApplicationUserIndexViewModel>
@{

    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <h1>Användare</h1>

            <p>
                <a asp-action="Create" class="btn btn-primary">Skapa ny användare</a>
            </p>

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            Rollnamn
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RoleName)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">Ändra</a> |
                                <a asp-action="Details" asp-route-id="@item.Id">Detaljer</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id">Radera</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>

</div>

